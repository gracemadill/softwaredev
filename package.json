{
  "name": "easy-read-toolbox",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": ["apps/*", "services/*", "packages/*"],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:mobile": "pnpm --filter mobile dev",
    "dev:api": "pnpm --filter api dev",
    "build": "run-p build:*",
    "build:mobile": "pnpm --filter mobile build || echo \"(mobile has no build script)\"",
    "build:api": "pnpm --filter api build",
    "lint": "run-p lint:*",
    "lint:mobile": "pnpm --filter mobile lint",
    "lint:api": "pnpm --filter api lint",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "eslint": "^8.57.0"
  }
}
