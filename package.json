{
  "name": "easy-read-toolbox",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": ["apps/*", "services/*", "packages/*"],
  "scripts": {
    "dev": "run-p dev:*",
    "dev:mobile": "pnpm --filter mobile dev",
    "dev:api": "pnpm --filter api dev",
    "build": "run-p build:*",
    "build:mobile": "pnpm --filter mobile build",
    "build:api": "pnpm --filter api build",
    "lint": "run-p lint:*",
    "lint:mobile": "pnpm --filter mobile lint",
    "lint:api": "pnpm --filter api lint",
    "prepare": "pnpm -r build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  }
}
